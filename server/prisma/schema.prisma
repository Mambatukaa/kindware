// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Site {
  id        String   @id @default(uuid())
  url       String   @unique
  scans     Scan[]
  createdAt DateTime @default(now())

  @@map("site")  // map Prisma model to lowercase table name
}

model Scan {
  id                    String   @id @default(uuid())
  site                  Site     @relation(fields: [siteId], references: [id])
  siteId                String
  privacyTrackers       Int
  thirdPartyCookies     Int
  privacyGrade          String
  accessibilityIssues   Int
  accessibilityCritical Int
  accessibilityGrade    String
  https                 Boolean
  createdAt             DateTime @default(now())

  @@map("scan")
}
